<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:paddingTop="@dimen/_19sdp"
        android:background="@drawable/shape_bg_round_white_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/_15ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_17sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_choose_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_11ssp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:text="-"/>

            <TextView
                android:id="@+id/tv_choose_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

        <View
            android:id="@+id/divider_top"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#E5E5E5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="@dimen/_13ssp"
            android:letterSpacing="0.05"
            android:layout_marginVertical="@dimen/_6sdp"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/divider_top2"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#E5E5E5" />

        <com.loper7.date_time_picker.DateTimePicker
            android:id="@+id/dateTimePicker"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_112sdp" />


        <View
            android:id="@+id/divider_top3"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#E5E5E5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="@dimen/_13ssp"
            android:letterSpacing="0.05"
            android:layout_marginVertical="@dimen/_6sdp"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/divider_top4"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#E5E5E5" />

        <com.loper7.date_time_picker.DateTimePicker
            android:id="@+id/dateTimePicker2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_112sdp" />


        <View
            android:id="@+id/divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="#E5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:text="Cancel"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/_13ssp"
                android:visibility="visible" />

            <View
                android:id="@+id/dialog_select_border"
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/dialog_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:text="Set"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>