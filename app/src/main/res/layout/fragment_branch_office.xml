<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="24dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presentation.add_edit_lead.fragment.BranchOfficeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/branch_office"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_16sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_branch_office"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text_grey"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="dropdown_menu"
                android:layout_marginTop="@dimen/_4sdp"
                app:boxStrokeWidth="0.8dp"
                app:boxStrokeColor="@color/outline_stroke"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/tv_branch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/select_branch_office_hint"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/colorTextHint"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:inputType="textPersonName"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_data"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_16sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name_mandatory"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text_grey"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                app:boxStrokeWidth="0.8dp"
                app:boxStrokeColor="@color/outline_stroke"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/e_g_john_doe"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/colorTextHint"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:inputType="textPersonName"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text_grey"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                app:boxStrokeWidth="0.8dp"
                app:boxStrokeColor="@color/outline_stroke"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/e_g_john_example_com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/colorTextHint"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cell_phone_number_mandatory"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_phone_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.38"
                    app:endIconMode="dropdown_menu"
                    app:boxStrokeWidth="0.8dp"
                    app:boxStrokeColor="@color/outline_stroke"
                    app:boxBackgroundColor="@color/yellow_btn"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="0dp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusBottomEnd="0dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/tv_phone_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/select_branch_office_hint"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:text="@string/_62"
                        android:padding="0dp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="0dp"
                        android:textColorHint="@color/colorTextHint"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:inputType="textPersonName"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    app:boxStrokeWidth="0.8dp"
                    app:boxStrokeColor="@color/outline_stroke"
                    app:boxCornerRadiusTopStart="0dp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="0dp"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/_879993xxxx"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:paddingVertical="0dp"
                        android:textColorHint="@color/colorTextHint"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/select_location"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_8sdp"
                android:textSize="@dimen/_10ssp"
                app:backgroundTint="@color/yellow_btn"
                app:cornerRadius="@dimen/_8sdp"
                app:icon="@drawable/ic_location"
                app:iconGravity="textStart"
                app:iconTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text_grey"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                app:boxStrokeWidth="0.8dp"
                app:boxStrokeColor="@color/outline_stroke"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="@string/e_g_jl_kerobokan_388x"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="start"
                    android:textColorHint="@color/colorTextHint"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:inputType="textMultiLine"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/latitude_mandatory"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_latitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:boxStrokeColor="@color/outline_stroke"
                    app:boxStrokeWidth="0.8dp"
                    app:hintEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintWidth_percent="0.48">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/e_g_8_44444"
                        android:inputType="numberDecimal|numberSigned"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorTextHint"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/latitude_mandatory"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/til_longitude"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_longitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:boxStrokeColor="@color/outline_stroke"
                    app:boxStrokeWidth="0.8dp"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintWidth_percent="0.48">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/e_g_115_00003"
                        android:inputType="numberDecimal|numberSigned"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorTextHint"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_gender"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text_grey"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:button="@null"
                    android:checked="true"
                    android:drawablePadding="@dimen/_4sdp"
                    android:drawableStart="@drawable/radio_button_state"/>

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:button="@null"
                    android:drawablePadding="@dimen/_4sdp"
                    android:drawableStart="@drawable/radio_button_state"/>

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/identity_number"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text_grey"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_identity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                app:boxStrokeWidth="0.8dp"
                app:boxStrokeColor="@color/outline_stroke"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_identity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/e_g_1879920xxxxxx"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/colorTextHint"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_identity_passport"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text_grey"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/container_add_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_plus"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_a_photo"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/outline_stroke"
                android:layout_marginTop="@dimen/_12sdp"/>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_12sdp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:text="@string/next"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textSize="@dimen/_10ssp"
                    app:backgroundTint="@color/yellow_btn"
                    app:cornerRadius="@dimen/_8sdp"
                    app:iconTint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.48"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>