<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.BottomSheet"
    app:backgroundTint="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_8"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:layout_marginHorizontal="24dp"
            android:drawablePadding="@dimen/_8sdp"
            android:layout_marginTop="24dp"
            android:hint="@string/dd_mm_yyyy_dd_mm_yyyy"
            android:textColorHint="@color/colorTextHint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:drawableEndCompat="@drawable/ic_calendar"
            app:drawableTint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginHorizontal="24dp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="dropdown_menu"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginHorizontal="24dp"
            app:boxStrokeWidth="0.8dp"
            app:boxStrokeColor="@color/outline_stroke"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/select_status"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="@dimen/_12sdp"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channel"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginHorizontal="24dp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="dropdown_menu"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginHorizontal="24dp"
            app:boxStrokeWidth="0.8dp"
            app:boxStrokeColor="@color/outline_stroke"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/tv_channel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/select_status"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="@dimen/_12sdp"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginHorizontal="24dp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="dropdown_menu"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginHorizontal="24dp"
            app:boxStrokeWidth="0.8dp"
            app:boxStrokeColor="@color/outline_stroke"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/tv_media"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/select_status"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="@dimen/_12sdp"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginHorizontal="24dp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="dropdown_menu"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginHorizontal="24dp"
            app:boxStrokeWidth="0.8dp"
            app:boxStrokeColor="@color/outline_stroke"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/tv_source"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/select_status"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textColorHint="@color/colorTextHint"
                android:paddingHorizontal="@dimen/_12sdp"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="@dimen/_16sdp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:paddingVertical="@dimen/_10sdp"
                android:text="@string/reset"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:backgroundTint="@color/white"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/outline_stroke"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

            <View
                android:layout_width="@dimen/_8sdp"
                android:layout_height="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:paddingVertical="@dimen/_10sdp"
                android:text="@string/search"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:backgroundTint="@color/yellow_brand"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>